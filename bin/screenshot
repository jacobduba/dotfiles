#!/bin/sh

config="$(printf "Copy screen\nCopy region\nSave screen\nSave region" | bemenu)"

case $config in
	"Copy screen")
		grim -t png - | wl-copy
		;;
	"Copy region")
		grim -t png -g "$(slurp)" - | wl-copy
		;;
	"Save screen")
		grim -t jpeg ~/img/screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg
		;;
	"Save region")
		grim -t jpeg -g "$(slurp)" ~/img/screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg
		;;
esac
